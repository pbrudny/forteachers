<div class="auth-form">
  <h1>Rejestracja</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :first_name, autofocus: true, placeholder: t('first_name'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, autofocus: true, placeholder: t('last_name'), :class => 'form-control' %>
  </div>

    <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('activerecord.attributes.user.password_confirmation'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.text_field :level_taught, placeholder: t('level_taught'), :class => 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.shared.links.sign_up'), :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
